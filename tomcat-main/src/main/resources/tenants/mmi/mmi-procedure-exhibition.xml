<record id="exhibition" is-extension="true">
    <services-record-path id="mmi">exhibitions_mmi:http://collectionspace.org/services/exhibition/local/mmi,exhibitions_mmi</services-record-path>

    <section id="exhibitionObjectInformation">
        <!-- adding new 'type' field to exhibitionObjectGroup, so duplicating entire field group -->
        <repeat id="mmiExhibitionObjectGroupList/mmiExhibitionObjectGroup" section="mmi">
            <field id="mmiExhibitionObjectNumber" section="mmi"/>
            <field id="mmiExhibitionObjectName" section="mmi"/>
            <field id="mmiExhibitionObjectType" autocomplete="true" ui-type="enum" section="mmi" />
            <field id="mmiExhibitionObjectConsCheckDate" datatype="date" section="mmi" />
            <field id="mmiExhibitionObjectConsTreatment" section="mmi" />
            <field id="mmiExhibitionObjectMount" section="mmi" />
            <field id="mmiExhibitionObjectSection" section="mmi"/>
            <field id="mmiExhibitionObjectCase" section="mmi"/>
            <field id="mmiExhibitionObjectSeqNum" section="mmi"/>
            <field id="mmiExhibitionObjectRotation" section="mmi"/>
            <field id="mmiExhibitionObjectNote" section="mmi"/>
        </repeat>
    </section>
</record>
