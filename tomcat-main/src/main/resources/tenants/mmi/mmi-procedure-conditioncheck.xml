<record id="conditioncheck" is-extension="true" type="record,procedure">

	<services-record-path id="mmi">
		conditionchecks_mmi:http://collectionspace.org/services/conditioncheck/local/mmi,conditionchecks_mmi
	</services-record-path>
	<section id="conditionCheckInformation">
		<!-- adding field to advanced search -->
		<field id="conditionCheckReason" ui-search="repeatable">
			<!-- adding new option to list -->
            		<selector>conditioncheck-conditionCheckReason</selector>
            		<options>
               			<option id="" default="yes">Please select a value</option>
               			<option id="conservation">Conservation</option>
               			<option id="damagedintransit">Damaged in transit</option>
               			<option id="loanin">Loan in</option>
               			<option id="loanout">Loan out</option>
               			<option id="newacquisition">New acquisition</option>
            		</options>
        	</field>
		<field id="conditionCheckReasonExhibition" ui-search="repeatable" section="mmi"></field>
	</section>
</record>
