<record id="person" is-extension="true">
    <services-record-path id="mmi">persons_mmi:http://collectionspace.org/services/person/local/mmi,persons_mmi</services-record-path>

    <instances id="person">
        <instance id="person-person">
            <web-url>person</web-url>
            <title-ref>person</title-ref>
        </instance>
    </instances>

    <section id="personNameAuthorityInformation">
        <repeat id="affiliatedPersonOrgGroupList/affiliatedPersonOrgGroup" section="mmi">
            <field id="affiliatedPersonOrg" autocomplete="true" section="mmi" />
            <field id="affiliatedPersonOrgType" section="mmi" />
        </repeat>

        <field id="lifeSpan" section="mmi"/>

        <repeat id="orgContactNames" section="mmi">
            <field id="orgContactName" autocomplete="true" section="mmi" />
        </repeat>

        <repeat id="orgFunctions" section="mmi">
            <field id="orgFunction" section="mmi" />
        </repeat>
    </section>
</record>
