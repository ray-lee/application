<record id="preferredTA">
	<section id="termInformation">
		<repeat id="taxonTermGroupList/taxonTermGroup">
			<field id="termStatus">
				<!-- Change options -->
				<options>
					<option id="provisional" default="yes">provisional</option>
					<option id="underReview">under review</option>
					<option id="accepted">accepted</option>
					<option id="rejected">rejected</option>
				</options>
			</field>
			<!-- Remove citation-worldcat from autocomplete -->
			<field id="termSource" autocomplete="citation-citation"/>
			<field id="taxonomicStatus">
				<!-- Change options -->
				<options>
					<option id="" default="yes">(none selected)</option>
					<option id="valid">current</option>
					<option id="invalid">obsolete</option>
				</options>
			</field>
		</repeat>
	</section>
</record>